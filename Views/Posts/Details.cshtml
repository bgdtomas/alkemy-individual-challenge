@model alkemy_blog_challenge.Models.Post

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl>
        <header class="mb-4">
            <h1 class="font-weight-bolder mb-1">
                    @Html.DisplayFor(model => model.Titulo)
            </h1>
            <div>
                Posted on @Html.DisplayFor(model => model.FechaCreacion)
            </div>
            <div class="badge bg-secondary text-decoration-none link-light">
                @Html.DisplayFor(model => model.Categoria)
            </div>
        </header>
        <figure class="mb-4">
            <img src="/Posts/RetrieveImage/@Model.Id" alt="" class="img-fluid rounded"/>
        </figure>
        <section class="mb-5">

            <p class="fs-5 mb-4">
                @Html.DisplayFor(model => model.Contenido)
            </p>

        </section>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
