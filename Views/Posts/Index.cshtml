@model IEnumerable<alkemy_blog_challenge.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <colgroup>
        <col span="1" style="width: 15%;">
        <col span="1" style="width: 70%;">
        <col span="1" style="width: 15%;">
    </colgroup>
    @foreach (var item in Model)
    {
        <thead>
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </th>
                <th class="text-left">
                    @Html.DisplayFor(modelItem => item.Categoria)
                </th>
                <th class="text-muted">
                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <img src="/Posts/RetrieveImage/@item.Id" alt="" height=100 width=100 />
                </td>

                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.Contenido)
                </td>


                <td>
                    <div class="dropdown text-right">
                        <button style="border: none; background-color: transparent; outline: none; " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                            </svg>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </div>
                </td>
            </tr>

        </tbody>
    }

</table>
